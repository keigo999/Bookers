<div style="color: green">
<%=flash[:notice]%>
</div>

<h1>Books</h1>
<table width="80%">
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th> </th>
	</tr>

	<tr>
	<% @books.each do |book| %>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%=link_to "show",book_path(book.id) %>
			<%=link_to "edit",edit_book_path(book.id) %>
			<%=link_to "destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか" %>
		</td>
	</tr>
<% end %>
</table>

<h1>New book</h1>
<%= form_for(@book) do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<br>

<%= f.submit "create Book" %>

<% end %>

